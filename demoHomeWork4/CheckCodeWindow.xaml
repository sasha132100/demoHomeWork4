<Window x:Class="demoHomeWork4.CheckCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoHomeWork4"
        mc:Ignorable="d"
        Title="Код" Height="250" Width="450" Icon="Resources/school_logo.ico">
    <Grid Background="#e7fabf">
        <TextBlock Text="Введите код администратора" FontFamily="Comic Sans MS" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox Name="checkTextBox" Width="200" Height="50" FontFamily="Comic Sans MS" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,55,0,0"/>
        <Button Name="goToAdminWindowButton" Background="#FF04A0FF" Width="200" Height="50" FontFamily="Comic Sans MS" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,115,0,0" Content="Подтвердить" Click="goToAdminWindowButton_Click"/>
    </Grid>
</Window>
