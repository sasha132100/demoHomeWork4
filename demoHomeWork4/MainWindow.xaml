<Window x:Class="demoHomeWork4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demoHomeWork4"
        mc:Ignorable="d"
        Title="Вход" Height="450" Width="800" Icon="Resources/school_logo.ico">
    <Grid Background="#E7FABF">
        <TextBlock Text="Добро пожаловать!" FontFamily="Comic Sans MS" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <Image Source="Resources/school_logo.png" HorizontalAlignment="Center" VerticalAlignment="Top" Width="70" Margin="0,45,0,0"/>
        <Button Name="goToStartButton" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,125,0,0" Content="Начать" FontFamily="Comic Sans MS" FontSize="25" Foreground="White" Background="#04A0FF" Click="goToStartButton_Click"/>
        <Button Name="goToAdminButton" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,175,0,0" Content="Админ" FontFamily="Comic Sans MS" FontSize="25" Foreground="White" Background="#04A0FF" Click="goToAdminButton_Click"/>
    </Grid>
</Window>
